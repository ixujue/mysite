---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Carousel from '../components/Carousel.astro';
import Sidebar from '../components/Sidebar.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 10);

// 准备热门文章数据用于侧边栏
const popularPosts = posts.slice(0, 5).map(post => ({
  title: post.data.title,
  link: `/blog/${post.id}/`,
  image: post.data.heroImage,
  date: post.data.pubDate
}));
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="main-content">
				<div class="content-area">
					<Carousel
						items={[
							{
								title: '借助 OmniFocus 4 搭建属于自己的任务管理系统',
								description: '《OmniFocus 4 高效管理日程》现已上线',
								image: '/uploads/wall-logo.jpg',
								link: '/blog/omnifocus-4/'
							},
							{
								title: '精要主义：如何更专注于重要事情',
								description: '让生活回归本质，专注于真正重要的事情',
								image: '/uploads/精要主义封面.png',
								link: '/blog/essentialism/'
							}
						]}
					/>
					<h2>最新文章</h2>
					<section class="posts-grid">
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
				</div>
				<Sidebar popularPosts={popularPosts} />
			</div>
		</main>
		<style>
			main {
				max-width: 1200px;
				margin: 0 auto;
				padding: 2rem 1rem;
			}
			.main-content {
				display: grid;
				grid-template-columns: 1fr 300px;
				gap: 2rem;
				margin-top: 60px; /* 为固定导航栏留出空间 */
			}
			.content-area {
				width: 100%;
			}
			
			/* 四个固定栏目链接样式 */
			.feature-links {
				display: grid;
				grid-template-columns: repeat(4, 1fr);
				gap: 1rem;
				margin: 2rem 0;
			}
			
			.feature-item {
				position: relative;
				display: block;
				border-radius: 12px;
				overflow: hidden;
				box-shadow: var(--box-shadow);
				transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
			}
			
			.feature-item:hover {
				transform: translateY(-5px);
				box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
			}
			
			.feature-item img {
				width: 100%;
				height: 150px;
				object-fit: cover;
				transition: transform 0.5s ease;
			}
			
			.feature-item:hover img {
				transform: scale(1.1);
			}
			.feature-item span {
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				padding: 0.5rem;
				background: rgba(0, 0, 0, 0.7);
				color: white;
				text-align: center;
				font-size: 0.9rem;
			}
			
			@media (max-width: 768px) {
				.feature-links {
					grid-template-columns: repeat(2, 1fr);
				}
			}
			.content-area h2 {
				margin: 2rem 0 1rem;
				font-size: 1.5rem;
			}
			.posts-grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 2rem;
			}
			ul {
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				grid-column: 1 / -1;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
			@media (max-width: 768px) {
				.main-content {
					grid-template-columns: 1fr;
				}
				.posts-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
		<Footer />
	</body>
</html>
