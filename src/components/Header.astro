<style>
	.site-header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		margin: 0;
		padding: 0 1em;
		background: rgba(255, 255, 255, 0.85);
		backdrop-filter: blur(15px);
		-webkit-backdrop-filter: blur(15px);
		box-shadow: 0 2px 10px rgba(var(--black), 8%);
		transition: all 0.3s ease;
	}

	.dropdown {
		position: relative;
		display: inline-block;
	}

	.dropdown-content {
		display: none;
		position: absolute;
		top: 100%;
		left: 0;
		background: rgba(255, 255, 255, 0.95);
		min-width: 600px;
		box-shadow: 0 8px 16px rgba(0,0,0,0.1);
		padding: 1.5em;
		z-index: 1001;
		border-radius: 12px;
		display: grid;
		grid-template-columns: auto 1fr;
		gap: 2em;
		opacity: 0;
		visibility: hidden;
		transform: translateY(-10px);
		transition: all 0.3s ease;
	}

	.dropdown:hover .dropdown-content {
		display: flex;
		opacity: 1;
		visibility: visible;
		transform: translateY(0);
	}

	.submenu {
		min-width: 160px;
	}

	.submenu h3 {
		margin: 0 0 0.8em;
		color: rgb(var(--black));
		font-size: 1em;
		font-weight: 600;
		padding-bottom: 0.5em;
		border-bottom: 1px solid rgba(var(--gray), 0.2);
	}

	.submenu a {
		display: block;
		padding: 0.5em 0;
		color: rgb(var(--gray));
		font-size: 0.9em;
		transition: all 0.2s ease;
	}

	.submenu a:hover {
		color: var(--accent);
		padding-left: 0.5em;
	}

	.hot-content {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1em;
		padding-left: 1em;
		border-left: 1px solid rgba(var(--gray), 0.2);
	}

	.hot-item {
		display: flex;
		align-items: center;
		gap: 1em;
		padding: 0.5em;
		border-radius: 8px;
		transition: all 0.2s ease;
	}

	.hot-item:hover {
		background: rgba(var(--gray-light), 0.5);
