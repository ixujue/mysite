<script>
	// 根据滚动位置和背景颜色动态调整导航栏样式
	document.addEventListener('DOMContentLoaded', () => {
		const header = document.querySelector('.site-header');
		const carousel = document.querySelector('.carousel-container');
		
		if (!header || !carousel) return;
		
		// 初始设置
		const carouselHeight = carousel.offsetHeight;
		const headerHeight = header.offsetHeight;
		
		// 根据当前轮播图的背景颜色调整导航栏样式
		function updateHeaderStyle() {
			const scrollPosition = window.scrollY;
			
			// 当在轮播图区域内时
			if (scrollPosition < carouselHeight - headerHeight) {
				header.classList.add('dark-bg');
				console.log('Adding dark-bg class, scrollPosition:', scrollPosition, 'carouselHeight:', carouselHeight, 'headerHeight:', headerHeight);
			} else {
				header.classList.remove('dark-bg');
				console.log('Removing dark-bg class, scrollPosition:', scrollPosition, 'carouselHeight:', carouselHeight, 'headerHeight:', headerHeight);
			}
		}
		
		// 初始调用一次
		updateHeaderStyle();
		
		// 确保在页面完全加载后再次调用，以获取正确的元素高度
		window.addEventListener('load', () => {
			// 重新获取高度，因为在DOMContentLoaded时可能还未完全渲染
			const updatedCarouselHeight = carousel.offsetHeight;
			const updatedHeaderHeight = header.offsetHeight;
			console.log('Updated heights - carousel:', updatedCarouselHeight, 'header:', updatedHeaderHeight);
			
			// 强制添加一次dark-bg类
			header.classList.add('dark-bg');
			
			// 更新函数中使用的高度值
			updateHeaderStyle();
		});
		
		// 监听滚动事件
		window.addEventListener('scroll', updateHeaderStyle);
	});
</script>
