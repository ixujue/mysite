<style>
	.site-header {
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		padding: 0 1em;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1400px;
		margin: 0 auto;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	nav a:hover {
		border-bottom-color: var(--accent);
	}
	nav h2 {
		margin: 0;
		font-size: 1.5rem;
	}
	.internal-links, .external-links {
		display: flex;
	}
	.dropdown {
		position: relative;
		display: inline-block;
	}
	.dropdown-content {
		display: none;
		position: absolute;
		left: 0;
		top: 100%;
		background-color: white;
		min-width: 700px;
		box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
		z-index: 1;
		padding: 20px;
		border-radius: 8px;
		display: flex;
		flex-direction: column;
		opacity: 0;
		visibility: hidden;
		transition: all 0.3s ease;
		transform: translateY(10px);
	}
	.dropdown:hover .dropdown-content {
		display: flex;
		opacity: 1;
		visibility: visible;
		transform: translateY(0);
	}
	.dropdown-content > div {
		display: flex;
		gap: 30px;
	}
	.submenu {
		display: flex;
		flex-direction: column;
		min-width: 150px;
	}
	.submenu h3 {
		margin-top: 0;
		margin-bottom: 10px;
		font-size: 1rem;
		color: #666;
	}
	.submenu a {
		padding: 5px 0;
		color: var(--black);
		border-bottom: none;
		font-size: 0.9rem;
	}
	.submenu a:hover {
		color: var(--accent);
		border-bottom: none;
	}
	.hot-content {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 15px;
		margin-top: 20px;
		width: 100%;
	}
	.hot-item {
		display: flex;
		flex-direction: column;
		border-radius: 8px;
		overflow: hidden;
		transition: all 0.3s ease;
		border: none !important;
		padding: 0 !important;
	}
	.hot-item:hover {
		transform: translateY(-5px);
		box-shadow: 0 5px 15px rgba(0,0,0,0.1);
		border: none !important;
	}
	.hot-item img {
		width: 100%;
		height: 100px;
		object-fit: cover;
	}
	.hot-item .title {
		padding: 10px;
		font-size: 0.85rem;
		background: #f5f5f5;
		flex-grow: 1;
	}
	@media (max-width: 720px) {
		.dropdown-content {
			min-width: 100vw;
			left: -100px;
			right: -100px;
			padding: 10px;
		}
		.dropdown-content > div {
			flex-direction: column;
			gap: 10px;
		}
		.hot-content {
			grid-template-columns: 1fr;
		}
	}
</style>
